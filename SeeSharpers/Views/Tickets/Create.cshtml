@model SeeSharpers.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Buy Ticket</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountType" class="control-label">Discount:</label>

                <select asp-for="DiscountType">
                    <option value="0">None</option>
                    <option value="1">Student</option>
                    <option value="2">Elderly</option>
                    <option value="3">Kid < 10</option>
                </select>

                <span asp-validation-for="DiscountType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PopcornArrangement" /> @Html.DisplayNameFor(model => model.PopcornArrangement)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
